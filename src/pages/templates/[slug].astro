    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .type-badge, .category-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    text-transform: capitalize;
    font-weight: 600;
  }

  .type-badge {
    background: #f3f4f6;
    color: #6b7280;
  }

  .category-badge {
    background: #e5e7eb;
    color: #374151;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    letter-spacing: -0.03em;
    margin-bottom: 0.5rem;
    color: var(--color-primary);
  }

