    background: #fef2f2;
    padding: 1.5rem;
    border-radius: 0.5rem;
    border-left: 4px solid #ef4444;
  }

  .solutions {
    background: #f0fdf4;
    padding: 1.5rem;
    border-radius: 0.5rem;
    border-left: 4px solid #22c55e;
  }

  .problems h3,
  .solutions h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .problems ul,
  .solutions ul {
    list-style: none;
    padding: 0;
  }

  .problems li,
  .solutions li {
    padding-left: 1.5rem;
    margin-bottom: 0.75rem;
    position: relative;
    color: var(--color-secondary);
    line-height: 1.6;
  }

  .problems li:before {
    content: "√ó";
    position: absolute;
    left: 0.25rem;
    color: #ef4444;
    font-weight: bold;
    font-size: 1.25rem;
  }

  .solutions li:before {
    content: "‚úì";
    position: absolute;
    left: 0.25rem;
    color: #22c55e;
    font-weight: bold;
  }

  .targeting {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin: 2.5rem 0;
  }

  .ideal-for {
    background: #eff6ff;
    padding: 1.5rem;
    border-radius: 0.5rem;
    border-left: 4px solid #3b82f6;
  }

  .not-for {
    background: #fefce8;
    padding: 1.5rem;
    border-radius: 0.5rem;
    border-left: 4px solid #eab308;
  }

  .ideal-for h3,
