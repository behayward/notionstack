    font-size: 1.125rem;
    color: var(--color-secondary);
  }

  .creator a {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
  }

  .creator a:hover {
    text-decoration: underline;
  }

  .product-content {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 3rem;
  }

  @media (max-width: 900px) {
    .product-content {
      grid-template-columns: 1fr;
    }

    .sidebar {
      order: -1;
    }
  }

  .main-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .description .headline {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-primary);
    line-height: 1.3;
  }

