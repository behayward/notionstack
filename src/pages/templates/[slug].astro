    content: "!";
    position: absolute;
    left: 0.5rem;
    color: #eab308;
    font-weight: bold;
  }

  .whats-included {
    margin: 2.5rem 0;
  }

  .whats-included h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .whats-included ul {
    list-style: none;
    padding: 0;
  }

  .whats-included li {
    padding-left: 2rem;
    margin-bottom: 0.75rem;
    position: relative;
    color: var(--color-secondary);
    line-height: 1.6;
  }

  .whats-included li:before {
    content: "üì¶";
    position: absolute;
    left: 0;
    font-size: 1.125rem;
  }

  .faqs {
    margin-top: 3rem;
    padding-top: 3rem;
    border-top: 2px solid var(--color-border);
  }

  .faqs h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 2rem;
    color: var(--color-primary);
  }

  .faq-item {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .faq-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .faq-item .question {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .faq-item .answer {
    color: var(--color-secondary);
    line-height: 1.7;
    font-size: 0.9375rem;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: 1.5rem;
    }

    .header-image {
      width: 100%;
      max-width: 400px;
      height: 220px;
    }

    .problem-solution,
    .targeting {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
