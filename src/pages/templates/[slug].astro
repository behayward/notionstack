    position: relative;
    z-index: 1;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .breadcrumb {
    color: var(--color-secondary);
    font-size: 0.875rem;
    margin-bottom: 2rem;
  }

  .breadcrumb a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .product-header {
    margin-bottom: 3rem;
  }

  .header-content {
    display: flex;
    gap: 3rem;
    align-items: flex-start;
  }

  .header-text {
    flex: 1;
  }

  .header-image {
    flex-shrink: 0;
    width: 280px;
    height: 200px;
