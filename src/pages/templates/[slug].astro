---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProductSchema from '../../components/schema/ProductSchema.astro';
import BreadcrumbSchema from '../../components/schema/BreadcrumbSchema.astro';
import FAQSchema from '../../components/schema/FAQSchema.astro';
import { readdir, readFile } from 'fs/promises';
import { join } from 'path';
import { generateHeadline, generateFirstParagraph, extractFeatures, addAffiliateTracking } from '../../utils/productContent';

export async function getStaticPaths() {
  const productsDir = join(process.cwd(), 'content/products');
  const files = await readdir(productsDir);
  const jsonFiles = files.filter(file => file.endsWith('.json'));

  const paths = await Promise.all(
    jsonFiles.map(async (file) => {
      const filePath = join(productsDir, file);
      const content = await readFile(filePath, 'utf-8');
      const product = JSON.parse(content);

      // Only include templates
      if (product.category === 'template') {
        return {
          params: { slug: product.slug },
          props: { product }
        };
      }
      return null;
    })
  );

  return paths.filter(Boolean);
}

const { product } = Astro.props;

// Generate content
const headline = generateHeadline(product.name, product.description, product.subcategory);
const firstParagraph = generateFirstParagraph(product.description);
const features = extractFeatures(product.description, product.features || '');
const creatorLink = addAffiliateTracking(product.creator.url);

// Build full product URL
const productUrl = `https://notionstack.so/templates/${product.slug}`;

// Build breadcrumb items
const breadcrumbItems = [
  { name: 'Home', url: 'https://notionstack.so/' },
  { name: 'Templates', url: 'https://notionstack.so/templates' },
  ...(product.subcategory ? [{
    name: product.subcategory,
    url: `https://notionstack.so/templates?category=${product.subcategory}`
  }] : []),
  { name: product.name, url: productUrl }
];
---

<BaseLayout
  title={product.name}
  description={product.description}
>
  <ProductSchema
    name={product.name}
    description={product.description}
    brand={product.creator.name}
    price={product.price}
    currency={product.currency}
    url={product.affiliateUrl || product.productUrl}
    rating={product.rating}
    reviewCount={product.ratingCount}
    category={product.subcategory}
  />
  <BreadcrumbSchema items={breadcrumbItems} />
  {product.enhancedContent?.faqs && (
    <FAQSchema items={product.enhancedContent.faqs} />
  )}

  <article class="product-detail">
    <div class="container">
      <div class="breadcrumb">
        <a href="/">Home</a> / <a href="/templates">Templates</a>
        {product.subcategory && <> / <a href={`/templates?category=${product.subcategory}`}>{product.subcategory}</a></>}
        / {product.name}
      </div>

      <header class="product-header">
        <div class="header-content">
          <div class="header-text">
            <div class="product-meta">
              <span class="type-badge">Template</span>
              {product.subcategory && <span class="category-badge">{product.subcategory}</span>}
            </div>
            <h1>{product.name}</h1>
            <p class="creator">By <a href={creatorLink} target="_blank" rel="noopener">{product.creator.name}</a></p>
          </div>
          {product.image && (
            <div class="header-image">
              <img src={product.image} alt={product.name} />
            </div>
          )}
        </div>
      </header>

      <div class="product-content">
        <div class="main-content">
          {/* Overview Section */}
          <section class="overview">
            <h2>Overview</h2>
            <p>{product.enhancedContent?.overview || firstParagraph}</p>
          </section>

          {/* Key Features Section (Enhanced) */}
          {product.enhancedContent?.featureCategories ? (
            <section class="features-enhanced">
              <h2>Key Features</h2>
              {product.enhancedContent.featureCategories.map(category => (
                <div class="feature-category">
                  <h3><span class="icon">{category.icon}</span> {category.category}</h3>
                  <ul>
                    {category.features.map(feature => (
                      <li>{feature}</li>
                    ))}
                  </ul>
                </div>
              ))}
            </section>
          ) : features.length > 0 && (
            <section class="features">
              <h3>What You Get</h3>
              <ul>
                {features.map(feature => (
                  <li>{feature}</li>
                ))}
              </ul>
            </section>
          )}

          {/* Problem/Solution Section */}
          {product.enhancedContent?.problemsSolved && product.enhancedContent?.solutionsBenefits && (
            <section class="problem-solution">
              <div class="problems">
                <h3>Without This Template</h3>
                <ul>
                  {product.enhancedContent.problemsSolved.map(problem => (
                    <li>{problem}</li>
                  ))}
                </ul>
              </div>
              <div class="solutions">
                <h3>With This Template</h3>
                <ul>
                  {product.enhancedContent.solutionsBenefits.map(solution => (
                    <li>{solution}</li>
                  ))}
                </ul>
              </div>
            </section>
          )}

          {/* Best Suited For Section */}
          {product.enhancedContent?.idealFor && product.enhancedContent?.notRecommendedFor && (
            <section class="targeting">
              <div class="ideal-for">
                <h3>‚úÖ Ideal For</h3>
                <ul>
                  {product.enhancedContent.idealFor.map(target => (
                    <li>{target}</li>
                  ))}
                </ul>
              </div>
              <div class="not-for">
                <h3>‚ùå Not Recommended For</h3>
                <ul>
                  {product.enhancedContent.notRecommendedFor.map(target => (
                    <li>{target}</li>
                  ))}
                </ul>
              </div>
            </section>
          )}

          {/* What You Get Section */}
          {product.enhancedContent?.whatsIncluded && (
            <section class="whats-included">
              <h2>What You Get</h2>
              <ul>
                {product.enhancedContent.whatsIncluded.map(item => (
                  <li>{item}</li>
                ))}
              </ul>
            </section>
          )}

          {/* FAQ Section */}
          {product.enhancedContent?.faqs && (
            <section class="faqs">
              <h2>Frequently Asked Questions</h2>
              {product.enhancedContent.faqs.map(faq => (
                <div class="faq-item">
                  <h3 class="question">{faq.question}</h3>
                  <p class="answer">{faq.answer}</p>
                </div>
              ))}
            </section>
          )}

          {/* Fallback: Tags */}
          {product.tags && product.tags.length > 0 && (
            <section class="tags">
              <h3>Tags</h3>
              <div class="tag-list">
                {product.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </section>
          )}
        </div>

        <aside class="sidebar">
          <div class="product-card">
            <div class="price-section">
              <span class="price">{product.price > 0 ? `$${product.price}` : 'Free'}</span>
              {product.price > 0 && <span class="currency">{product.currency}</span>}
            </div>

            <a
              href={product.hasAffiliate ? product.affiliateUrl : product.productUrl}
              class="cta-button"
              target="_blank"
              rel="noopener"
            >
              Get This Template ‚Üí
            </a>

            {product.rating && product.ratingCount && product.rating <= 5 && (
              <div class="rating-info">
                <div class="rating">
                  <span class="stars">
                    {[1, 2, 3, 4, 5].map(star => (
                      <span class={star <= Math.floor(product.rating) ? 'star filled' : 'star empty'}>‚òÖ</span>
                    ))}
                  </span>
                  <span class="rating-number">{product.rating.toFixed(1)}</span>
                </div>
                <span class="count">({product.ratingCount.toLocaleString()} reviews)</span>
              </div>
            )}
          </div>
        </aside>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
