---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProductCard from '../components/ProductCard.astro';
import { readdir, readFile } from 'fs/promises';
import { join } from 'path';

// Get featured products (latest 12)
const productsDir = join(process.cwd(), 'content/products');
let products = [];

try {
  const files = await readdir(productsDir);
  const jsonFiles = files.filter(file => file.endsWith('.json'));

  // Load up to 12 products for homepage
  const featuredFiles = jsonFiles.slice(0, 12);

  for (const file of featuredFiles) {
    const filePath = join(productsDir, file);
    const content = await readFile(filePath, 'utf-8');
    products.push(JSON.parse(content));
  }
} catch (error) {
  products = [];
}
---

<BaseLayout
  title="Home"
  description="Curated collection of the best Notion templates, courses, and tools. Hand-picked products to enhance your productivity and workflow."
>
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1>Curated Notion Templates & Tools</h1>
        <p class="subtitle">Only the best products. Hand-picked for quality.</p>
      </div>
      <div class="filters">
        <a href="/products" class="filter-link">All</a>
        <a href="/products?category=template" class="filter-link">Templates</a>
        <a href="/products?category=course" class="filter-link">Courses</a>
        <a href="/products?category=tool" class="filter-link">Tools</a>
      </div>
    </div>
  </section>

  {products.length > 0 && (
    <section class="products">
      <div class="container">
        <div class="products-grid">
          {products.map(product => (
            <ProductCard product={product} />
          ))}
        </div>
        <div class="view-more">
          <a href="/products" class="btn-view-all">View all products â†’</a>
        </div>
      </div>
    </section>
  )}
</BaseLayout>

<style>
  .hero {
    padding: 3rem 0 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .hero-content {
    text-align: center;
    margin-bottom: 2rem;
  }

  .hero h1 {
    font-size: 2.25rem;
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: -0.03em;
    margin-bottom: 0.5rem;
    color: var(--color-primary);
  }

  .subtitle {
    font-size: 1rem;
    color: var(--color-secondary);
  }

  .filters {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .filter-link {
    padding: 0.5rem 1rem;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-secondary);
    transition: all 0.15s ease;
  }

  .filter-link:hover {
    background: var(--color-surface);
    color: var(--color-primary);
    border-color: #d1d5db;
  }

  .products {
    padding: 2.5rem 0 4rem;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .view-more {
    text-align: center;
  }

  .btn-view-all {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-primary);
    transition: all 0.15s ease;
  }

  .btn-view-all:hover {
    background: var(--color-surface);
    border-color: #d1d5db;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 2rem 0 1.5rem;
    }

    .hero h1 {
      font-size: 1.75rem;
    }

    .filters {
      gap: 0.375rem;
    }

    .filter-link {
      padding: 0.375rem 0.75rem;
      font-size: 0.8125rem;
    }

    .products {
      padding: 2rem 0 3rem;
    }

    .products-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }
  }
</style>
