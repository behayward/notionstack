---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProductCard from '../components/ProductCard.astro';
import { readdir, readFile } from 'fs/promises';
import { join } from 'path';

// Get latest products
const productsDir = join(process.cwd(), 'content/products');
let products = [];

try {
  const files = await readdir(productsDir);
  const jsonFiles = files.filter(file => file.endsWith('.json'));

  // Load up to 6 products for homepage
  const latestFiles = jsonFiles.slice(0, 6);

  for (const file of latestFiles) {
    const filePath = join(productsDir, file);
    const content = await readFile(filePath, 'utf-8');
    products.push(JSON.parse(content));
  }
} catch (error) {
  // No products yet
  products = [];
}
---

<BaseLayout
  title="Home"
  description="Discover the best Notion templates, courses, tools, and AI prompts. Find products optimized for your workflow and boost your productivity."
>
  <section class="hero">
    <div class="container">
      <h1>Discover the Best Notion Products</h1>
      <p class="subtitle">
        Find templates, courses, tools, and AI prompts to supercharge your Notion workspace.
      </p>
      <div class="cta-buttons">
        <a href="/products" class="btn btn-primary">Browse All Products</a>
        <a href="/products/templates" class="btn btn-secondary">View Templates</a>
      </div>
    </div>
  </section>

  <section class="categories">
    <div class="container">
      <h2>Browse by Category</h2>
      <div class="category-grid">
        <a href="/products/templates" class="category-card">
          <h3>Templates</h3>
          <p>Pre-built Notion templates for various use cases</p>
        </a>
        <a href="/products/courses" class="category-card">
          <h3>Courses</h3>
          <p>Learn Notion with expert-led courses and tutorials</p>
        </a>
        <a href="/products/tools" class="category-card">
          <h3>Tools</h3>
          <p>Integrations and tools to extend Notion's capabilities</p>
        </a>
        <a href="/products/prompts" class="category-card">
          <h3>AI Prompts</h3>
          <p>Prompt libraries to maximize Notion AI</p>
        </a>
      </div>
    </div>
  </section>

  {products.length > 0 && (
    <section class="featured">
      <div class="container">
        <h2>Latest Products</h2>
        <div class="products-grid">
          {products.map(product => (
            <ProductCard product={product} />
          ))}
        </div>
        <div class="view-all">
          <a href="/products" class="btn btn-secondary">View All Products â†’</a>
        </div>
      </div>
    </section>
  )}
</BaseLayout>

<style>
  .hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.95;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.75rem 2rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.2s, opacity 0.2s;
  }

  .btn:hover {
    transform: translateY(-2px);
    opacity: 0.9;
  }

  .btn-primary {
    background: white;
    color: #667eea;
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    border: 2px solid white;
  }

  .categories {
    padding: 4rem 0;
  }

  .categories h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .category-card {
    border: 2px solid var(--color-border);
    border-radius: 8px;
    padding: 2rem;
    text-decoration: none;
    color: var(--color-text);
    transition: border-color 0.2s, transform 0.2s;
  }

  .category-card:hover {
    border-color: #667eea;
    transform: translateY(-4px);
  }

  .category-card h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .category-card p {
    color: #666;
  }

  .featured {
    padding: 4rem 0;
    background: #f9f9f9;
  }

  .featured h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .view-all {
    text-align: center;
  }
</style>
