<style>
  .legal-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 2rem 5rem;
  }

  .container {
    background: white;
    padding: 3rem;
    border-radius: 0.75rem;
    border: 1px solid var(--color-border);
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    letter-spacing: -0.03em;
  }

  .updated {
    color: var(--color-secondary);
    font-size: 0.9375rem;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  section {
    margin-bottom: 2.5rem;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 1rem;
    margin-top: 2rem;
  }

  h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    margin-top: 1.5rem;
  }

  p {
    color: var(--color-secondary);
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  ul {
    color: var(--color-secondary);
    line-height: 1.7;
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  strong {
    color: var(--color-primary);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .legal-page {
      padding: 2rem 1rem 3rem;
    }

    .container {
      padding: 2rem 1.5rem;
    }

    h1 {
      font-size: 2rem;
    }

