---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProductSchema from '../../components/schema/ProductSchema.astro';
import BreadcrumbSchema from '../../components/schema/BreadcrumbSchema.astro';
import FAQSchema from '../../components/schema/FAQSchema.astro';
import { readdir, readFile } from 'fs/promises';
import { join } from 'path';

export async function getStaticPaths() {
  // Check both content/tools and content/products directories
  const toolsDir = join(process.cwd(), 'content/tools');
  const productsDir = join(process.cwd(), 'content/products');

  let toolFiles = [];

  // Try tools directory first
  try {
    const files = await readdir(toolsDir);
    toolFiles = files.filter(file => file.endsWith('.json')).map(file => ({
      dir: toolsDir,
      file
    }));
  } catch (error) {
    // Tools directory doesn't exist yet, check products
    try {
      const files = await readdir(productsDir);
      const jsonFiles = files.filter(file => file.endsWith('.json'));

      for (const file of jsonFiles) {
        const filePath = join(productsDir, file);
        const content = await readFile(filePath, 'utf-8');
        const product = JSON.parse(content);

        if (product.category === 'tool') {
          toolFiles.push({ dir: productsDir, file });
        }
      }
    } catch (err) {
      console.error('Error loading tools:', err);
      return [];
    }
  }

  const paths = await Promise.all(
    toolFiles.map(async ({ dir, file }) => {
      const filePath = join(dir, file);
      const content = await readFile(filePath, 'utf-8');
      const tool = JSON.parse(content);

      return {
        params: { slug: tool.slug },
        props: { tool }
      };
    })
  );

  return paths;
}

const { tool } = Astro.props;

// Build full tool URL
const toolUrl = `https://notionstack.so/tools/${tool.slug}`;

// Build breadcrumb items
const breadcrumbItems = [
  { name: 'Home', url: 'https://notionstack.so/' },
  { name: 'Tools', url: 'https://notionstack.so/tools' },
  ...(tool.subcategory ? [{
    name: tool.subcategory,
    url: `https://notionstack.so/tools?category=${tool.subcategory}`
  }] : []),
  { name: tool.name, url: toolUrl }
];

// Helper to capitalize integration method
const formatIntegration = (method) => {
  if (!method) return 'Integration';
  const formatted = {
    'native': 'Native Integration',
    'zapier': 'Via Zapier',
    'api': 'API Integration',
    'embed': 'Embed/Widget',
    'extension': 'Browser Extension',
    'widget': 'Widget'
  };
  return formatted[method] || method.charAt(0).toUpperCase() + method.slice(1);
};
---

<BaseLayout
  title={tool.name}
  description={tool.tagline || tool.description}
>
  <ProductSchema
    name={tool.name}
    description={tool.tagline || tool.description}
    brand={tool.creator?.name}
    price={0}
    currency="USD"
    url={tool.affiliateUrl || tool.website}
    rating={tool.rating}
    reviewCount={tool.ratingCount}
    category={tool.subcategory}
  />
  <BreadcrumbSchema items={breadcrumbItems} />
  {tool.enhancedContent?.faqs && (
    <FAQSchema items={tool.enhancedContent.faqs} />
  )}

  <article class="tool-detail">
    <div class="container">
      <div class="breadcrumb">
        <a href="/">Home</a> / <a href="/tools">Tools</a>
        {tool.subcategory && <> / <a href={`/tools?category=${tool.subcategory}`}>{tool.subcategory}</a></>}
        / {tool.name}
      </div>

      <header class="tool-header">
        <div class="tool-meta">
          <span class="category-badge">{tool.category}</span>
          {tool.integrationMethod && (
            <span class="integration-badge">{formatIntegration(tool.integrationMethod)}</span>
          )}
          {tool.complexityLevel && (
            <span class={`complexity-badge complexity-${tool.complexityLevel}`}>
              {tool.complexityLevel}
            </span>
          )}
        </div>

        <h1>{tool.name}</h1>

        {tool.tagline && <p class="tagline">{tool.tagline}</p>}

        <div class="meta-info">
          {tool.creator?.name && (
            <span class="creator">By <a href={tool.creator.url} target="_blank" rel="noopener">{tool.creator.name}</a></span>
          )}
          {tool.rating && tool.ratingCount && (
            <span class="rating-meta">‚≠ê {tool.rating} ({tool.ratingCount.toLocaleString()} reviews)</span>
          )}
          {tool.pricingDisplay && (
            <span class="pricing-meta">{tool.pricingDisplay}</span>
          )}
        </div>

        <a
          href={tool.affiliateUrl || tool.website}
          class="cta-primary"
          target="_blank"
          rel="noopener"
        >
          Try {tool.name} ‚Üí
        </a>

        {tool.topBenefits && tool.topBenefits.length > 0 && (
          <div class="benefits-list">
            {tool.topBenefits.map(benefit => (
              <span class="benefit">‚úì {benefit}</span>
            ))}
          </div>
        )}
      </header>

      {/* Quick Facts Bar */}
      <div class="quick-facts">
        {tool.pricingDisplay && <span>üí∞ {tool.pricingDisplay}</span>}
        {tool.integrationMethod && <span>üîó {formatIntegration(tool.integrationMethod)}</span>}
        {tool.complexityLevel && <span>‚ö° {tool.complexityLevel.charAt(0).toUpperCase() + tool.complexityLevel.slice(1)}</span>}
      </div>

      <div class="tool-content">
        <div class="main-content">
          {/* Overview Section */}
          <section class="overview">
            <h2>Overview</h2>
            {tool.enhancedContent?.overview ? (
              <div set:html={tool.enhancedContent.overview} />
            ) : (
              <p>{tool.description}</p>
            )}
          </section>

          {/* Key Features Section */}
          {tool.enhancedContent?.featureCategories && (
            <section class="features-enhanced">
              <h2>Key Features</h2>
              {tool.enhancedContent.featureCategories.map(category => (
                <div class="feature-category">
                  <h3><span class="icon">{category.icon}</span> {category.category}</h3>
                  <ul>
                    {category.features.map(feature => (
                      <li>{feature}</li>
                    ))}
                  </ul>
                </div>
              ))}
            </section>
          )}

          {/* Tags / Use Cases */}
          {tool.tags && tool.tags.length > 0 && (
            <section class="tags-section">
              <h3>Use Cases & Tags</h3>
              <div class="tag-list">
                {tool.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </section>
          )}

          {/* FAQ Section */}
          {tool.enhancedContent?.faqs && tool.enhancedContent.faqs.length > 0 && (
            <section class="faqs">
              <h2>Frequently Asked Questions</h2>
              {tool.enhancedContent.faqs.map(faq => (
                <div class="faq-item">
                  <h3 class="question">{faq.question}</h3>
                  <p class="answer">{faq.answer}</p>
                </div>
              ))}
            </section>
          )}

          {/* Alternatives Section */}
          {tool.alternatives && tool.alternatives.length > 0 && (
            <section class="alternatives">
              <h2>Similar Tools</h2>
              <ul class="alternatives-list">
                {tool.alternatives.map(altSlug => (
                  <li>
                    <a href={`/tools/${altSlug}`}>{altSlug.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ')} ‚Üí</a>
                  </li>
                ))}
              </ul>
            </section>
          )}
        </div>

        <aside class="sidebar">
          <div class="action-card">
            {tool.image && (
              <div class="tool-image">
                <img src={tool.image} alt={tool.name} />
              </div>
            )}

            <div class="pricing-display">
              {tool.pricingDisplay || 'View Pricing'}
            </div>

            <a
              href={tool.affiliateUrl || tool.website}
              class="cta-button"
              target="_blank"
              rel="noopener"
            >
              Try {tool.name} ‚Üí
            </a>

            {tool.rating && tool.ratingCount && (
              <div class="rating-info">
                <div class="rating">
                  <span class="stars">
                    {[1, 2, 3, 4, 5].map(star => (
                      <span class={star <= Math.floor(tool.rating) ? 'star filled' : 'star empty'}>‚òÖ</span>
                    ))}
                  </span>
                  <span class="rating-number">{tool.rating.toFixed(1)}</span>
                </div>
                <span class="count">({tool.ratingCount.toLocaleString()} reviews)</span>
              </div>
            )}

            {tool.topBenefits && tool.topBenefits.length > 0 && (
              <div class="benefits-sidebar">
                {tool.topBenefits.map(benefit => (
                  <div class="benefit-item">‚úì {benefit}</div>
                ))}
              </div>
            )}
          </div>

          <div class="quick-info-card">
            <h3>Quick Info</h3>
            <dl>
              {tool.creator?.name && (
                <>
                  <dt>Company</dt>
                  <dd><a href={tool.creator.url} target="_blank" rel="noopener">{tool.creator.name}</a></dd>
                </>
              )}
              {tool.integrationMethod && (
                <>
                  <dt>Integration</dt>
                  <dd>{formatIntegration(tool.integrationMethod)}</dd>
                </>
              )}
              {tool.setupTime && (
                <>
                  <dt>Setup Time</dt>
                  <dd>{tool.setupTime}</dd>
                </>
              )}
              {tool.complexityLevel && (
                <>
                  <dt>Complexity</dt>
                  <dd class="complexity-value">{tool.complexityLevel.charAt(0).toUpperCase() + tool.complexityLevel.slice(1)}</dd>
                </>
              )}
            </dl>
          </div>
        </aside>
      </div>
    </div>
  </article>
</BaseLayout>

