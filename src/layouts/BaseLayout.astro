---
interface Props {
  title: string;
  description?: string;
  fullWidth?: boolean;
}

const { title, description = "Discover the best Notion templates, courses, and tools. Find products optimized for your workflow.", fullWidth = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | NotionStack</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <header>
      <nav class={fullWidth ? "full-width" : "container"}>
        <a href="/" class="logo">NotionStack</a>
        <ul class="nav-links">
          <li><a href="/products">Browse</a></li>
          <li><a href="/blog">Blog</a></li>
        </ul>
      </nav>
    </header>

    <main class={fullWidth ? "full-width" : ""}>
      <slot />
    </main>

    <footer>
      <div class="container">
        <div class="footer-content">
          <div class="footer-brand">
            <div class="logo">NotionStack</div>
            <p>Discover the best Notion products</p>
          </div>
          <div class="footer-links">
            <div class="footer-column">
              <h4>Browse</h4>
              <a href="/products">All Products</a>
              <a href="/products?category=template">Templates</a>
              <a href="/products?category=course">Courses</a>
              <a href="/products?category=tool">Tools</a>
            </div>
            <div class="footer-column">
              <h4>Resources</h4>
              <a href="/blog">Blog</a>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; 2026 NotionStack. All rights reserved.</p>
          <p>Affiliate links may earn us a commission at no cost to you.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #111827;
    --color-secondary: #6b7280;
    --color-border: #e5e7eb;
    --color-background: #ffffff;
    --color-surface: #fafafa;
    --max-width: 1280px;
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 2rem;
    --spacing-xl: 3rem;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: var(--color-primary);
    background: var(--color-background);
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  header {
    border-bottom: 1px solid var(--color-border);
    padding: 1.25rem 0;
    position: sticky;
    top: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    z-index: 100;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  nav.full-width {
    max-width: 100%;
    padding: 0 var(--spacing-xl);
  }

  .logo {
    font-size: 1.125rem;
    font-weight: 700;
    text-decoration: none;
    color: var(--color-primary);
    letter-spacing: -0.03em;
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  .nav-links a {
    text-decoration: none;
    color: var(--color-secondary);
    font-weight: 500;
    font-size: 0.9375rem;
    transition: color 0.15s ease;
    letter-spacing: -0.01em;
  }

  .nav-links a:hover {
    color: var(--color-primary);
  }

  main {
    min-height: calc(100vh - 300px);
  }

  main.full-width {
    max-width: 100%;
    padding: 0;
  }

  footer {
    border-top: 1px solid var(--color-border);
    margin-top: 4rem;
    padding: 3rem 0 2rem;
    background: white;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    margin-bottom: 2rem;
  }

  .footer-brand .logo {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
  }

  .footer-brand p {
    color: var(--color-secondary);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  .footer-links {
    display: flex;
    gap: 3rem;
  }

  .footer-column h4 {
    font-size: 0.8125rem;
    font-weight: 600;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--color-primary);
  }

  .footer-column a {
    display: block;
    color: var(--color-secondary);
    text-decoration: none;
    font-size: 0.9375rem;
    margin-bottom: 0.625rem;
    transition: color 0.15s ease;
  }

  .footer-column a:hover {
    color: var(--color-primary);
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-bottom p {
    color: var(--color-secondary);
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
    }

    .footer-bottom {
      flex-direction: column;
      align-items: flex-start;
    }

    nav.full-width {
      padding: 0 var(--spacing-md);
    }
  }
</style>
