---
interface Props {
  product: {
    id: string;
    name: string;
    slug: string;
    description: string;
    price: number;
    currency: string;
    category: string;
    creator: {
      name: string;
    };
    hasAffiliate: boolean;
  };
}

const { product } = Astro.props;
---

<a href={`/products/${product.slug}`} class="product-card">
  <div class="card-header">
    <span class="category-badge">{product.category}</span>
    {product.hasAffiliate && <span class="affiliate-badge">Affiliate</span>}
  </div>

  <h3 class="product-title">{product.name}</h3>
  <p class="product-creator">{product.creator.name}</p>

  <p class="product-description">{product.description.slice(0, 120)}{product.description.length > 120 ? '...' : ''}</p>

  <div class="card-footer">
    <span class="price">{product.price > 0 ? `$${product.price}` : 'Free'}</span>
    <span class="view-link">View â†’</span>
  </div>
</a>

<style>
  .product-card {
    display: flex;
    flex-direction: column;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    padding: 1.75rem;
    text-decoration: none;
    transition: all 0.2s ease;
    height: 100%;
  }

  .product-card:hover {
    border-color: #d1d5db;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
    transform: translateY(-2px);
  }

  .card-header {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .category-badge {
    display: inline-block;
    background: #f3f4f6;
    color: #6b7280;
    padding: 0.25rem 0.625rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: capitalize;
    letter-spacing: 0.02em;
  }

  .affiliate-badge {
    display: inline-block;
    background: #dbeafe;
    color: #1e40af;
    padding: 0.25rem 0.625rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .product-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.375rem;
    line-height: 1.4;
    letter-spacing: -0.02em;
  }

  .product-creator {
    font-size: 0.875rem;
    color: var(--color-secondary);
    margin-bottom: 1rem;
  }

  .product-description {
    color: var(--color-secondary);
    font-size: 0.9375rem;
    line-height: 1.6;
    flex-grow: 1;
    margin-bottom: 1.25rem;
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }

  .price {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-primary);
    letter-spacing: -0.02em;
  }

  .view-link {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-secondary);
    transition: color 0.15s ease;
  }

  .product-card:hover .view-link {
    color: var(--color-primary);
  }
</style>
