---
interface Props {
  name?: string;
  description?: string;
  url?: string;
  logo?: string;
  sameAs?: string[];
}

const {
  name = 'NotionStack',
  description = 'Discover the best Notion templates, courses, and tools. Find products optimized for your workflow.',
  url = 'https://notionstack.so',
  logo = 'https://notionstack.so/favicon.svg',
  sameAs = []
} = Astro.props;

const schema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name,
  description,
  url,
  logo: {
    '@type': 'ImageObject',
    url: logo
  },
  ...(sameAs.length > 0 && { sameAs })
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
